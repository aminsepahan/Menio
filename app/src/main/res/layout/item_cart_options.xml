<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cartLay"
    android:layout_width="150dp"
    android:layout_height="45dp"
    android:background="@drawable/menu_back_shape"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/cartTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/theme_medium"
        android:gravity="center"
        android:text="@string/add_to_cart"
        android:textColor="@color/white"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/cartProgress"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/cartOptionsLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/cartDecrease"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/cartQty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/theme_bold"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/cartIncrease"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="22dp" />

    </LinearLayout>
</RelativeLayout>