<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="5dp"
        android:layout_toStartOf="@+id/cartOptions"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/variationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/theme"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/dark_gray"
            android:textSize="13dp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/variationTitle"
            android:layout_toStartOf="@+id/variationPrice"
            android:fontFamily="@font/theme"
            android:gravity="center"
            android:letterSpacing="0.15"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="....................................................................................................................................................................."
            android:textColor="@color/dark_gray"
            android:textSize="13dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/variationPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/theme_medium"
            android:maxLines="1"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:textColor="@color/dark_gray_2"
            android:textSize="13dp" />

    </RelativeLayout>

    <include
        android:id="@+id/cartOptions"
        layout="@layout/item_cart_options"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp" />

</RelativeLayout>